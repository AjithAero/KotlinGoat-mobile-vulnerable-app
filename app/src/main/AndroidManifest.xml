<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="miguel.freitas.kotlingoat">

    <uses-sdk android:minSdkVersion="14" /> <!-- Insecure Android SDK -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" /> <!-- Failure To Implement Least Privilege -->

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:debuggable="true"
        android:allowClearUserData="true"
        android:largeHeap="true"
        android:extractNativeLibs="true"
        android:persistent="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"> <!--
        allowBackup, fullBackupOnly - Allowed Backup,
        debuggable - Debuggable Enabled
        allowClearUserData - Allowed to Clear User Data
        largeHeap - Uncontrolled Memory Allocation
        extractNativeLibs - Malware Injection into File System
        persistent - Background Process Running
        usesCleartextTraffic - Insecure Transport Layer
        -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".ExportedServiceWithoutPermissions" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" ></action>
            </intent-filter>
        </service> <!-- Exported Service Without Permissions -->
        <provider android:name=".ExportedContentProvider"
            android:authorities=".ExportedContentProvider" android:exported="true">
        </provider> <!-- Exported Content Provider Without Permissions -->
    </application>

</manifest>